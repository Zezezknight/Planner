# ============================================
# ENVIRONMENT CONFIGURATION TEMPLATE (.env.example)
# Copy to .env and configure for your needs
# ============================================

# === DATABASE ===
MONGO_URI=mongodb://localhost:27017
MONGO_DB_NAME=planner
MONGO_POOL_SIZE=10

# === AUTHENTICATION & JWT ===
JWT_SECRET=dev-secret-change-me-32-characters-minimum
JWT_ALG=HS256
JWT_EXPIRE_MINUTES=60

# === APPLICATION ===
APP_NAME=studplanner
APP_ENV=dev

# === HTTP & NETWORK ===
HTTP_TIMEOUT=10
HTTP_MAX_CONNECTIONS=10

# === REDIS & CACHING ===
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10

CACHE_ENABLED=true
CACHE_TTL_TASKS=900
CACHE_TTL_SECONDS=900
CACHE_MAX_BYTES=1048576
CACHE_TTL_PREVIEW=300

# === LOGGING ===
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=logs/app.log
LOG_ROTATE_MB=10
LOG_BACKUP_COUNT=5

# === BACKGROUND TASKS & SCHEDULER ===
SCHEDULER_ENABLED=true

# Auto import
AUTO_IMPORT_ENABLED=false
AUTO_IMPORT_INTERVAL_MINUTES=60

# Data cleanup
CLEANUP_ENABLED=true
CLEANUP_INTERVAL_HOURS=24
CLEANUP_EXPIRED_DAYS=90

# Reminders
REMINDERS_ENABLED=true
REMINDER_CHECK_INTERVAL_MINUTES=15
REMINDER_BEFORE_MINUTES=30

